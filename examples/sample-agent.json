            }
        },
        "security": [
            {
                "bearerAuth": []
            }
        ]
    },
    "tags": [
        "translation",
        "nlp",
        "language"
    ],
    "metadata": {
        "region": "us-east-1",
        "version": "1.0.0"
    }
